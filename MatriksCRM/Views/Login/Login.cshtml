@model  MatriksCRM.Models.Kullanici
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Markazi+Text" rel="stylesheet">

<html>
<head>
    <style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Homepage</title>
    <script>
        $("#btnLogin").click(function (event) {

            //Fetch form to apply custom Bootstrap validation
            var form = $("#formLogin")

            if (form[0].checkValidity() === false) {
                event.preventDefault()
                event.stopPropagation()
            }

            form.addClass('was-validated');
        });
    </script>
</head>

<body class="" style="background-color:black">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <img src="~/Images/stajyerler.png" alt="Logo" class="center" height="150">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h3 class="mb-0">Giriş</h3>
                            </div>
                            <div class="card-body">
                                @using (Html.BeginForm())
                                {
                                    <div class="form-group">
                                        <label for="uname1">Email</label>
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-lg rounded-0", @Value = ViewBag.Email, id = "uname", type = "text", name = "uname", required = "", })

                                        <div class="invalid-feedback">Oops, bunu kaçırdın.</div>
                                    </div>
                                    <div class="form-group">
                                        <label>Şifre</label>
                                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control form-control-lg rounded-0", id = "pwd", required = "", autocomplete = "new-password", type = "password" })
                                        <div class="invalid-feedback">Şifrenizi de giriniz!</div>
                                    </div>

                                    <div>
                                        @Html.CheckBoxFor(x => x.hatırla) Beni Hatırla
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg float-right" id="btnLogin">Giriş Yap</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
