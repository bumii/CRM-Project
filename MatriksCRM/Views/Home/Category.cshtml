
@{
    ViewBag.Title = "Category";
}

<style>
    .leftpanel {

        width: 200px;
        top: 0;
        left: 0;
        z-index: 100;
        background: #343a40;
        position:absolute;
    }

    .logopanel{
     
        padding: 10px;
        background : #1d2939;
        border-bottom : 1px solid #939ca9;
    }

    .leftpanelinner{
        padding : 5px 10px;
    }

    .sidebartitle{
        font-size:11px;
        text-transform: uppercase;
        color: #999;
        margin-bottom: 10px;
    }

    #menu li{
        margin-bottom: 10px;
        padding: 5px;
        border-radius: 5px;
    }
    
    #menu a {
        color: #999;
        text-decoration: none;
        font-size: 14px;

    }

   #menu li:hover{
       background-color:#fff;
   }
    #menu li:hover a {
        color: #343a40;
    }

   .li-element{
       width: 100%;
   }
   .icons{
       
       margin-right:5px;
   }

   .nav-bracket{
       margin-bottom:30px;
   }

    .mainpanel {
        background: #e4e7ea;
        min-height: 400px;
        margin-left:200px;
      
    }
    .headerbar {
        border-left: 1px solid #eee;
        background: #fff;
    }

    .header-right{
        float:right;
    }
    .headermenu{
        list-style:none;
        margin:0;
        padding:0;
    }

    .headermenu:after{
        clear:both;
        display:block;
        content: '';
    }
   .headermenu > li{
       display:inline-block;
       float:left;
       border-left:1px solid #eee;
       position:relative;
       height:50px;
   }
   .dropdown-menu{
       font-size:9pt;
   }
  
</style>

<div class="leftpanel">
    <div class=" logopanel" ></div>
     <div class="leftpanelinner">
         <h5 class="sidebartitle">Menü</h5>
         <ul id="menu" class="nav nav-pills nav-stacked nav-bracket">
             <li id="Menüli" class="active li-element">
                 <a href="/Home/Category">
                     <i class="fas fa-home icons"></i>
                     <span>Anasayfa</span>
                 </a>
             </li>
             <li id="Uygulamali" class="nav-parent li-element">
                 <a href="#!"><i class="fab fa-product-hunt icons"></i>
                     <span>Uygulama Projeleri</span>
                 </a>
             </li>
             <li id="Dogruli" class="nav-parent li-element">
                 <a href="#!"><i class="fas fa-money-bill icons"></i>
                     <span>Doğrudan Satış Projeleri</span>
                 </a>
             </li>
             <li id="istakipid" class="nav-parent li-element">
                 <a href="#!"><i class="fas fa-briefcase icons"></i>
                     <span>İş Takip Platformu</span>
                 </a>
             </li>
             <li id="musteritakipid" class="nav-parent li-element">
                 <a href="#!"> <i class="far fa-address-book icons"></i>
                     <span>Müşteri Takip Platformu</span>
                 </a>
             </li> 
             <li id="ajandaid" class="nav-parent li-element">
                 <a href="#!"><i class="fas fa-calendar-alt icons"></i>
                     <span>Ajanda</span>
                 </a>
             </li>
         </ul>
     </div>
</div>
<div class="mainpanel">
    <div class="headerbar">
        <div class="header-right">
            <ul class="headermenu">
                <li class>
                    <button type="button" class="btn btn-sm btn-white " data-toggle="dropdown">
                        <i class="fa fa-th-list fa-2x " style="color:#1d2939;"></i>
                    </button>
                    <ul class="dropdown-menu pull-right dropdown-menu2" role="menu">
                        <li>
                            <a href="#!">
                            <i class="glyphicon glyphicon-list-alt mr5 "></i>"Tekliflerim"
                            </a>

                        </li>
                    </ul>
                </li>
                
            </ul>
        </div>
    </div>
</div>

